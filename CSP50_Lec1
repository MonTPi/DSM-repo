#Crafting a Function

#bulk of code
def WhatIsName():
    name = input("whats your name? (Full Name)")
#run function
    hello(name)



#def deine a function()
def hello(to='buddy olpal'):
    to = to.strip().title()

#split first & last name
    first, last = to.split(" ")

#return welcome
    print(f'Hello, {first}', end='')
    print(' u have big penis')


WhatIsName()

#very nice